{
  "dependencyDashboardAutoclose": true,
  "ignorePrAuthor": true,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "platformAutomerge": true,
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "maven"
      ],
      "versioning": "docker"
    }
  ]
}